@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@if (Model.Count() > 0)
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.First().MembershipType.Name)
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "Details", "Customer", new { id = item.Id }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MembershipType.Name)
                    </td>
                </tr>
            }
        </tbody>        
        
        
    </table>

}
else
{
    <h3>We don't have any customers yets</h3>
}
