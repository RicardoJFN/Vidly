@model List<Vidly.Models.Movie>

@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "MovieController", new { @class = "btn btn-primary"})
<br />

@if (Model.Count() > 0)
{
    <br />
    <table class="table table-hover table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.First().Genre.Type)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit", "Movie", new { id = item.Id }, null)
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                </td>
                <td>
                    @Html.DisplayFor(model => item.Genre.Type)
                </td>
            </tr>
        }
    </table>

}
else
{
    <h3>We don't have any movies yets</h3>
}
